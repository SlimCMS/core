{
    "name": "slimcms/core",
    "description": "Core SlimCMS",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "php-di/php-di": "^6.3",
        "nikic/fast-route": "^1.3"
    },
    "autoload": {
        "files": ["src/helpers.php"],
        "psr-4": {
            "Slimcms\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
